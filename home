    <script>
        // Typing effect for the loading screen
        function typeWriter(element, text, speed, callback) {
            let i = 0;
            element.innerHTML = '';
            
            function type() {
                if (i < text.length) {
                    element.innerHTML = text.substring(0, i+1) + '<span class="typed-text"></span>';
                    i++;
                    setTimeout(type, speed);
                } else if (callback) {
                    callback();
                }
            }
            
            type();
        }

        // Matrix-style falling code animation
        function createMatrixEffect() {
            const matrixContainer = document.getElementById('matrixCode');
            const chars = '01アルゴリズムALF';
            
            for (let i = 0; i < 50; i++) {
                const charElement = document.createElement('div');
                charElement.classList.add('code-char');
                charElement.textContent = chars[Math.floor(Math.random() * chars.length)];
                charElement.style.left = `${Math.random() * 100}%`;
                charElement.style.animationDuration = `${Math.random() * 3 + 2}s`;
                charElement.style.animationDelay = `${Math.random() * 5}s`;
                matrixContainer.appendChild(charElement);
            }
        }

        // Simulate ALF Capital returns with more realistic patterns
        function updateOurReturns() {
            const element = document.getElementById('ourReturn');
            
            // More sophisticated simulation with momentum
            const baseReturn = 14.2; // Starting point
            const volatility = 0.4; // Reduced volatility for professional appearance
            const fluctuation = (Math.random() - 0.5) * volatility;
            
            // Add slight positive bias for demonstration
            const bias = 0.02;
            const finalReturn = baseReturn + fluctuation + bias;
            
            // Format and display with professional precision
            const sign = finalReturn >= 0 ? '+' : '';
            element.textContent = `${sign}${finalReturn.toFixed(2)}%`;
            element.className = `metric-value ${finalReturn >= 0 ? 'positive' : 'negative'}`;
        }

        // Fetch SPY current year return with more realistic market behavior
        async function updateSPYReturns() {
            const element = document.getElementById('spyReturn');
            
            try {
                // More realistic SPY simulation with lower volatility
                const baseSPYReturn = 9.8;
                const marketVolatility = 0.15;
                const fluctuation = (Math.random() - 0.5) * marketVolatility;
                const spyReturn = baseSPYReturn + fluctuation;
                
                const sign = spyReturn >= 0 ? '+' : '';
                element.textContent = `${sign}${spyReturn.toFixed(2)}%`;
                element.className = `metric-value ${spyReturn >= 0 ? 'positive' : 'negative'}`;
                
            } catch (error) {
                console.error('Error fetching SPY data:', error);
                // Professional fallback
                const simulatedReturn = 9.8 + (Math.random() - 0.5) * 0.15;
                const sign = simulatedReturn >= 0 ? '+' : '';
                element.textContent = `${sign}${simulatedReturn.toFixed(2)}%`;
            }
        }

        // Real-time updates with professional timing
        function startLiveUpdates() {
            // Update our returns every 5 seconds (less frequent feels more stable)
            setInterval(updateOurReturns, 5000);
            
            // Update SPY returns every 45 seconds
            setInterval(updateSPYReturns, 45000);
            
            // Initial update
            updateOurReturns();
            updateSPYReturns();
        }

        // Modal functionality for Contact and Research
        function setupModals() {
            const contactLink = document.querySelector('a[href="#contact"]');
            const researchLink = document.querySelector('a[href="#research"]');
            
            contactLink.addEventListener('click', (e) => {
                e.preventDefault();
                alert('For inquiries, please contact our offices:\n\nEmail: contact@alfcapital.com\nTelephone: +1 (212) 555-0100\nAddress: 500 Park Avenue, New York, NY');
            });
            
            researchLink.addEventListener('click', (e) => {
                e.preventDefault();
                alert('ALF Research Division\n\nOur quantitative research focuses on:\n• Algorithmic trading strategies for digital assets\n• Market microstructure analysis\n• Portfolio optimization techniques\n• Risk management frameworks\n\nWhite papers available to accredited investors upon request.');
            });
        }

        // Initialize everything when page loads
        document.addEventListener('DOMContentLoaded', () => {
            // Create the matrix effect
            createMatrixEffect();
            
            // Start the typing effect
            const typedLogo = document.getElementById('typedLogo');
            typeWriter(typedLogo, 'ALF CAPITAL & STRATEGIES', 100);
            
            // After 7 seconds, hide loading screen and show main content
            setTimeout(() => {
                document.getElementById('loadingScreen').style.display = 'none';
                document.getElementById('mainContent').style.opacity = '1';
                
                // Start the live updates
                startLiveUpdates();
                setupModals();
            }, 7000);
        });
    </script>
</body>
